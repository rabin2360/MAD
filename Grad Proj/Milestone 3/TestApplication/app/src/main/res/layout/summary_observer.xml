<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/summaryObserverEditBtn"
        android:onClick="observerSummaryEditButton"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summaryObserverEditBtn"
        >


        <EditText
            android:id="@+id/popUpObsFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname (Required)"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/popUpObsLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname (Required)"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/popUpObsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>
</RelativeLayout>
